name: Create Release

on:
  workflow_dispatch:
    inputs:
      version_bump:
        description: 'Version bump type or explicit version'
        required: true
        type: choice
        options:
          - patch
          - minor
          - major
        default: 'patch'
      explicit_version:
        description: 'Explicit version (overrides version_bump if set, e.g., 0.12.0)'
        required: false
        type: string
      dry_run:
        description: 'Dry run (show what would be done without making changes)'
        required: false
        type: boolean
        default: false
      generate_changelog:
        description: 'Auto-generate changelog from conventional commits'
        required: false
        type: boolean
        default: true

permissions:
  contents: write

jobs:
  create-release:
    runs-on: ubuntu-latest
    timeout-minutes: 15
    steps:
      - name: Checkout
        uses: actions/checkout@v6
        with:
          fetch-depth: 0  # Full history for changelog generation
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.14'

      - name: Configure Git
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"

      - name: Determine version
        id: version
        run: |
          # Get current version
          CURRENT_VERSION=$(grep -oP '__version__\s*=\s*"\K[^"]+' jmcore/src/jmcore/version.py)
          echo "current_version=$CURRENT_VERSION" >> $GITHUB_OUTPUT

          # Determine new version
          if [[ -n "${{ inputs.explicit_version }}" ]]; then
            NEW_VERSION="${{ inputs.explicit_version }}"
          else
            # Parse current version
            IFS='.' read -r MAJOR MINOR PATCH <<< "$CURRENT_VERSION"

            case "${{ inputs.version_bump }}" in
              major)
                NEW_VERSION="$((MAJOR + 1)).0.0"
                ;;
              minor)
                NEW_VERSION="${MAJOR}.$((MINOR + 1)).0"
                ;;
              patch)
                NEW_VERSION="${MAJOR}.${MINOR}.$((PATCH + 1))"
                ;;
            esac
          fi

          echo "new_version=$NEW_VERSION" >> $GITHUB_OUTPUT
          echo "Current version: $CURRENT_VERSION"
          echo "New version: $NEW_VERSION"

      - name: Generate changelog from commits
        if: ${{ inputs.generate_changelog && !inputs.dry_run }}
        run: |
          python scripts/generate_changelog.py --update
          # Check if changelog was modified
          if git diff --quiet CHANGELOG.md; then
            echo "No changelog changes generated"
          else
            echo "Changelog updated with new entries"
            git add CHANGELOG.md
            git commit -m "docs: update changelog for ${{ steps.version.outputs.new_version }}"
          fi

      - name: Preview changelog (dry run)
        if: ${{ inputs.generate_changelog && inputs.dry_run }}
        run: |
          python scripts/generate_changelog.py --preview

      - name: Bump version
        if: ${{ !inputs.dry_run }}
        run: |
          python scripts/bump_version.py ${{ steps.version.outputs.new_version }} --no-push

      - name: Bump version (dry run)
        if: ${{ inputs.dry_run }}
        run: |
          python scripts/bump_version.py ${{ steps.version.outputs.new_version }} --dry-run

      - name: Push changes and tag
        if: ${{ !inputs.dry_run }}
        run: |
          git push
          git push --tags

      - name: Summary
        run: |
          echo "## Release Summary" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Field | Value |" >> $GITHUB_STEP_SUMMARY
          echo "|-------|-------|" >> $GITHUB_STEP_SUMMARY
          echo "| Previous Version | ${{ steps.version.outputs.current_version }} |" >> $GITHUB_STEP_SUMMARY
          echo "| New Version | ${{ steps.version.outputs.new_version }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Bump Type | ${{ inputs.version_bump }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Dry Run | ${{ inputs.dry_run }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Changelog Generated | ${{ inputs.generate_changelog }} |" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY

          if [[ "${{ inputs.dry_run }}" == "true" ]]; then
            echo "> **Note**: This was a dry run. No changes were made." >> $GITHUB_STEP_SUMMARY
          else
            echo "The tag has been pushed. The [Release workflow](.github/workflows/release.yaml) will automatically create the GitHub release." >> $GITHUB_STEP_SUMMARY
          fi
